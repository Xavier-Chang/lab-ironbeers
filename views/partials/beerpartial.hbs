<div class="beer-container">
  
  <img src='{{this.image_url}}' alt='' />
  
  <div class="beer-text">

    <h1>{{this.name}}</h1>
    <h2>{{this.tagline}}</h2>
    <p>{{this.description}}</p>

    <div class="randomBeer-part">
        <h3>Food pairing:</h3>
     <ul>
         {{#each food_pairing}}
            <li>{{this}}</li>
         {{/each}}
     </ul>
     
     <h3>Brewers tips:</h3>
     <p>{{this.brewers_tips}}</p>
    </div>
  </div>

</div>